				+ "\n1. Lotto 구입"
				+ "\n2. 프로그램 종료"
				+ "\n=========================="
				+ "\n메뉴선택 > ");
		Scanner sc = new Scanner(System.in);
		int num = ;
		
		return sc;
	}

}
