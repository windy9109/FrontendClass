	}
	
	//1~9사이의 서로다른 난수 3개를 만들어서 List에 저장하는 메서드
	//(Set이용)
	private void getNum() {
		HashSet<Integer> numSet = new HashSet<Integer>();
		
		//1~9사이의 난수만들기
		while(numSet.size()<3) {
			numSet.add((int)(Math.random()*9+1));
		}
		
		//만들어진 난수를 List에 저장한다.
		numList = new ArrayList<Integer>(numSet);
		
		//List의 데이터를 섞어준다.
		Collections.shuffle(numList);
		
		
	}
	
	
	
	
	

}
